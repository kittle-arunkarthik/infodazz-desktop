{
  "name": "infodazz-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "build": {
    "appId": "com.infodazz.desktop",
    "productName": "Infodazz",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "**/*",
      "../SCHOOL/client/dist/**/*",
      "../FACE/client/dist/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraFiles": [
      {
        "from": "../SCHOOL/client/dist",
        "to": "resources/school",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../FACE/client/dist",
        "to": "resources/face",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icons/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Infodazz"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.education",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icons",
      "category": "Education",
      "maintainer": "kittle.arunkarthik@gmail.com",
      "description": "Infodazz ERP Application",
      "synopsis": "Enterprise Resource Planning Application"
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "kittle-arunkarthik",
        "repo": "infodazz-desktop",
        "private": false
      }
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "start:school": "electron . --school",
    "start:face": "electron . --face",
    "start:dev": "electronmon .",
    "dev": "concurrently \"cd ../SCHOOL/client && npm run dev\" \"cd ../FACE/client && npm run dev\" \"electronmon .\"",
    "prebuild": "cd ../SCHOOL/client && npm run build && cd ../../FACE/client && npm run build && cd ../../electron && node copy-dist.js",
    "build": "npm run build:school && npm run build:face",
    "build:school": "electron-builder --config electron-builder-school.yml",
    "build:face": "electron-builder --config electron-builder-face.yml",
    "build:all": "npm run build:school && npm run build:face",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "patch": "npm version patch --no-git-tag-version",
    "release:remote": "node scripts/trigger-release.js",
    "release": "npm version patch --no-git-tag-version && npm run release:school && npm run release:face",
    "release:all": "npm run release:school && npm run release:face",
    "release:school": "electron-builder --config electron-builder-school.yml --publish always",
    "release:face": "electron-builder --config electron-builder-face.yml --publish always",
    "icons": "electron-icon-builder --input=assets/images/icon.png --output=build/ --flatten",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force $env:LOCALAPPDATA\\electron-builder,$env:LOCALAPPDATA\\electron -ErrorAction SilentlyContinue; npm cache clean --force\""
  },
  "keywords": [],
  "author": "Kittle Arun Karthik <kittle.arunkarthik@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/kittle-arunkarthik/infodazz-desktop",
  "description": "Infodazz Desktop Application",
  "dependencies": {
    "concurrently": "^9.2.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "electronmon": "^2.0.3"
  }
}
